
<h1 class = "container py-5 text-center">Crear Series </h1>


<%= form_with model: @serie, method: :Serie do |form| %>
    <div class="col-4  container ">
            <div class="py-3">
                <%= form.label :name, "Nombre de la pelicula", class: "form-label " %>
                <%= form.text_field :name, class: "form-control" %>
            </div>
            <div class="py-3">
                <%= form.label :synopsis, "Synopsis de la pelicula", class: "form-label " %>
                <%= form.text_field :synopsis, class: "form-control" %>
            </div>
            <div class="py-3">
                <%= form.label :director, "Director de la pelicula", class: "form-label" %>
                <%= form.text_field :director, class: "form-control" %>
            </div>
            <div class="text-center py-5">
                <%= form.submit "Crea Series", class: "btn btn-primary" %>
                <%= link_to "Volver Series ", series_index_path,  class: "btn btn-success"%>
            </div>
    </div>
 <% end %>